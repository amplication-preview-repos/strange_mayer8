datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  clientId     String?
  clientSecret String?
  createdAt    DateTime @default(now())
  id           String   @id @default(cuid())
  updatedAt    DateTime @updatedAt
}

model OAuthToken {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  token     String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt   DateTime     @default(now())
  email       String?      @unique
  firstName   String?
  id          String       @id @default(cuid())
  lastName    String?
  oAuthTokens OAuthToken[]
  password    String
  roles       Json
  updatedAt   DateTime     @updatedAt
  username    String       @unique
}
